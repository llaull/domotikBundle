                }],*/

                "fieldMappings": [ {
                    "fromField": "value",
                    "toField": "value"
                }, {
                    "fromField": "volume",
                    "toField": "volume"
                } ],

                "compared": false,
                "categoryField": "Date",
                "dataLoader": {
                    "url": "{{ path('domobox_log_graph') }}",
                    "format": "json"
//                    "showCurtain": true,
