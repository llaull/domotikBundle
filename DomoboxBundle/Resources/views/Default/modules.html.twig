{% extends 'FrondOfficeBundle:MetronicWebApp:body-page-content.html.twig' %}

{% block moreCss %}{% endblock moreCss %}
{% block moreJs %}{% endblock moreJs %}

{% set title_page = 'les modules' %}

{% block content_txt %}

    {% for emplacement in emplacements %}
        {#
           si annonyme et que la valeur n'est pas "test"
           ou qu'on est authentifi√©
           on affiche le titre "test"
        #}
        {% if (is_granted('IS_AUTHENTICATED_ANONYMOUSLY') and emplacement.isPublic != true) or is_granted('IS_AUTHENTICATED_FULLY') %}

            <div class="row">
                <div class="col-md-12">
                    {#<!-- BEGIN Portlet PORTLET-->#}
                    <div class="portlet box blue-steel">
                        <div class="portlet-title">
                            <div class="caption">
                                {#<i class="fa fa-gift"></i>#}
                                {{ emplacement.name }} </div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse"> </a>
                                {#<a href="#portlet-config" data-toggle="modal" class="config"> </a>#}
                                {#<a href="javascript:;" class="reload"> </a>#}
                                {#<a href="" class="fullscreen"> </a>#}
                                {#<a href="javascript:;" class="remove"> </a>#}
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                            {% for module in modules %}
                                {% if  emplacement.name == module.emplacement %}


                                        <div class="col-md-2 ">
                                            {#<!-- BEGIN Portlet module -->#}
                                            <div class="portlet box blue-hoki">
                                                <div class="portlet-title">
                                                    <div class="caption">
                                                        {#<i class="fa fa-gift"></i>#}
                                                        {{ module.name }} </div>
                                                </div>
                                                <div class="portlet-body">
                                                    <div class="scroller" style="height:100px" data-rail-visible="1"
                                                         data-rail-color="yellow" data-handle-color="#a1b2bd">
                                                        {{ module.sonsor_value }}
                                                        {{ module.unitee_symbole }}
                                                    </div>
                                                </div>
                                                {#<!-- END Portlet PORTLET-->#}
                                            </div>
                                        </div>


                                {% endif %}
                            {% endfor %}
                            </div>
                        </div>
                    </div>
                    {#<!-- END Portlet PORTLET-->#}
                </div>
            </div>

        {% endif %}
    {% endfor %}
{% endblock content_txt %}
