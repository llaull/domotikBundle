{% extends 'FrondOfficeBundle:MetronicWebApp:body-page-content.html.twig' %}

{% block moreCss %}

    <!-- BEGIN PAGE LEVEL PLUGINS -->
    {% stylesheets
    '@BackOfficeBundle/Resources/public/assets/global/plugins/tinycolorpicker/tinycolorpicker.css'
    output='assets/global/plugins/tinycolorpicker/tinycolorpicker.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}

    <!-- END PAGE LEVEL PLUGINS -->

{% endblock moreCss %}
{% block moreJs %}


    {% javascripts
    '@BackOfficeBundle/Resources/public/assets/global/plugins/tinycolorpicker/jquery.tinycolorpicker.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}


    <script type="text/javascript">
        $(document).ready(function(){if($("#colorPicker").length){var c=$("#colorPicker");c.tinycolorpicker(),c.bind("change",function(){var c=$(this).find(".colorInput").val(),o=$(this).find(".modAdresse").val(),a='[{"module":"'+o+'"},{"path":"color"},{"color":"'+c+'"}]';$.ajax({data:"data="+a,cache:!1,type:"POST",url:"{{ path ('domotique_module_set_color') }}",success:function(c){}})})}});
    </script>


{% endblock moreJs %}

{% set title_page = 'les modules' %}

{% block content_txt %}

    {% for emplacement in emplacements %}
        {#
           si annonyme et que la valeur n'est pas "test"
           ou qu'on est authentifi√©
           on affiche le titre "test"
        #}
        {% if (is_granted('IS_AUTHENTICATED_ANONYMOUSLY') and emplacement.isPublic == true) or is_granted('IS_AUTHENTICATED_FULLY') %}

            <div class="row">
                <div class="col-md-12">
                    {#<!-- BEGIN Portlet PORTLET-->#}
                    <div class="portlet box blue-steel">
                        <div class="portlet-title">
                            <div class="caption">
                                {#<i class="fa fa-gift"></i>#}
                                {{ emplacement.name }} </div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse"> </a>
                                {#<a href="#portlet-config" data-toggle="modal" class="config"> </a>#}
                                {#<a href="javascript:;" class="reload"> </a>#}
                                {#<a href="" class="fullscreen"> </a>#}
                                {#<a href="javascript:;" class="remove"> </a>#}
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                            {% for module in modules %}
                                {% if  emplacement.name == module.emplacement %}

                                    {% include 'DomotiqueDomoboxBundle:ui_module:' ~ module.nom_sonde ~ '.html.twig' with {'foo': 'bar'} %}

                                {% endif %}
                            {% endfor %}
                            </div>
                        </div>
                    </div>
                    {#<!-- END Portlet PORTLET-->#}
                </div>
            </div>

        {% endif %}
    {% endfor %}
{% endblock content_txt %}
